---
const { color, font, transform, extra } = Astro.props;

const classes = [
  font,
  "font-semibold",
  "text-6xl",
  "text-tightest",
  "xl:text-7xl",
  "xl:leading-wnvl-7",
  color,
  transform ?? "normal-case",
  extra ? [...extra] : "",
  "dark:text-gray-200",
];
---

<h2 class:list={classes}>
  <slot />
</h2>
