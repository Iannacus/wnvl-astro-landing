---
const { extra } = Astro.props;

const classes = [
  "absolute",
  "w-full",
  "h-full",
  "bg-gradient-red",
  "bg-gradient-to-tr",
  "from-gradient-purple",
  "from-20%",
  "via-gradient-red",
  "via-50%",
  "to-gradient-orange",
  "to-80%",
];
---

<div class:list={[...classes, extra ? [...extra] : ""]}>
  <slot />
</div>
